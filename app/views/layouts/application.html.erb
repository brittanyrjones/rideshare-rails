<!DOCTYPE html>
<html>
  <head>
    <title>RideshareRails</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <main class="flex-container">
    <header>
      <nav>
        <ul class="home">
          <li id="home">
            <%= link_to "HOME", root_path%>
          </li>
          <li>
            <%= link_to "Drivers", drivers_path %>
          </li>
          <li>
            <%= link_to "Passengers", passengers_path %>
          </li>
          <li>
            <%= link_to "Trips", trips_path %>
          </li>
          <li class="new">
            <%= link_to "New Driver", new_driver_path %>
          </li>
          <li class="new">
            <%= link_to "New Passenger", new_passenger_path %>
          </li>
        </ul>
      </nav>
    </header>

    <body>
      <% flash.each do |key, value| %>
          <div class="<%= key %>"><%= value %></div>
        <% end %>
      <%= yield %>
    </body>
    <footer>
      <nav>
        <ul>
          <li>
            <p>Made By: Brittany Jones & Phoebe Manning (Â© 2018)</p>
          </li>
        </ul>
      </nav>
    </footer>
  </main>
</html>
