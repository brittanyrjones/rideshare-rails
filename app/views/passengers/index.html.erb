<h2>All Passengers</h2>
<ul class="passenger-grid-container">
  <li class="inner-grid-container">
    <span class="col-name">Name</span>
    <span class="col-name">Modify</span>
  </li>
  <% @passengers.each do |passenger| %>
  <li class="inner-grid-container">
    <span class="title">
      <%= link_to passenger.name, passenger_path(passenger.id) %>
    </span>
    <span>
      <%= link_to "Edit", edit_passenger_path(passenger.id) %>
      <%= link_to "Delete", passenger_path(passenger.id),method: :delete, data: {confirm: "Warning: Passenger will be deleted. Click OK to confirm."} %>
    </span>
  </li>
  <% end %>
</ul>
