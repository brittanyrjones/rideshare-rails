  <%= form_for @trip do | f | %>

  <%= f.label :driver_id %>
  <%= f.select :driver_id, Driver.all.map { | driver | [driver.name, driver.id]} %>

  <%= f.label :passenger_id %>
  <%= f.select :passenger_id, Passenger.all.map { | passenger | [passenger.name, passenger.id]} %>


  <%= f.datetime_select :date %>

  <% if @trip.id == nil %>
  <%= f.label :rating %>
  <%= f.text_field :rating, :value => 0, :readonly => true %>
  <% end %>

  <% if @trip.rating == 0 %>
  <%= f.label :rating %>
  <%= f.text_field :rating %>
  <% end %>

  <%= f.submit %>

  <% end %>
